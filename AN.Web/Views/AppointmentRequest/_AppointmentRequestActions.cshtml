@model (int id, AppointmentStatus status)

<div class="btn-group" role="group" aria-label="Appointment Actions">
    @if (Model.status == AppointmentStatus.Unknown)
    {
        <button type="button"
                class="btn btn-outline-success btn-sm"
                onclick="approveAppointmentRequest('@Model.id')" title="Approve">
            <i class="fa fa-check"></i>
        </button>
        <button type="button"
                class="btn btn-outline-info btn-sm"
                onclick="viewAppointmentRequest('@Model.id')" title="View Details">
            <i class="fa fa-info-circle"></i>
        </button>
        <button type="button"
                class="btn btn-outline-danger btn-sm"
                onclick="deleteAppointmentRequest('@Model.id')" title="Delete">
            <i class="fa fa-trash"></i>
        </button>
    }
</div>
