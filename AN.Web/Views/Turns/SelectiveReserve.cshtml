
<div class="card w-100 p-3" ng-show="ReserveData.ReservationType == 1 && !SelectedTurn">
    <div class="col-xs-12 col-md-12">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <input id="TurnDateInput" type="text" class="form-control text-center" placeholder="@AN.Core.Resources.Global.Global.PleaseSelectYourTurnDate" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-xs-12 col-md-12">
                <p ng-show="BookableTurns" class="text-center mt-2">@AN.Core.Resources.Global.Global.PleaseSelectYourTurnTime</p>
                <div ng-show="BookableTurns" class="divider"></div>
                <div ng-repeat="turn in BookableTurns" ng-class="{wrap:!($index % 4)}" style="float:left; padding:5px;">
                    <span class="empty-turn-time-small"
                          ng-click="SetSelectedTurn(turn)"
                          ng-disabled="SelectedTurn">
                        <span>{{turn.StartTime}}</span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>





