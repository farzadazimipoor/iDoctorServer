
@model AN.Web.Models.DoctorDetailsViewModel

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <div class="doctor-profile">
                <div class="doctor-picture"><img src="~/images/avatars/@Model.Avatar?ver=@(Guid.NewGuid())" alt="@Model.FullName" /></div>
                <div class="doctor-details">
                    <h6 class="doctor-name">@Model.FullName</h6>
                    @if (Model.Expertises != null && Model.Expertises.Any())
                    {
                        foreach (var item in Model.Expertises)
                        {
                            <p class="doctor-proficiency"> <span>@item</span></p>
                        }
                    }
                    <div class="extra-doctor-info"></div>
                    <p><strong>@AN.Core.Resources.Global.Global.MedicalCouncilNumber: </strong> <span>@(Model.MedicalCouncilNumber ?? "")</span></p>
                </div>
                <div class="divider"></div>
                <p><strong>@AN.Core.Resources.Global.Global.ContactNumber:</strong> <span dir="ltr">@Model.Phones.FirstOrDefault()</span></p>
                <p>@Model.Address</p>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6439.536142232489!2d43.96983985042419!3d36.196522004629664!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40072290909ad373%3A0xb91c0cf437d6f32f!2zTmFyYW5qINmG2KfYsdmG2Kw!5e0!3m2!1sen!2siq!4v1562592011807!5m2!1sen!2siq" width="100%" height="250" frameborder="0" style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</div>

