@model IEnumerable<AN.Web.Areas.ClinicManager.Models.BlockedMobilesViewModel>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @using (Html.BeginForm("DeleteBlockedMobile", "Security", new { area = "ClinicManager", id = item.Id }, FormMethod.Post, true, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <button class="btn btn-xs btn-danger"
                                    type="button"
                                    data-toggle="modal"
                                    data-target="#confirmDelete"
                                    data-title="@AN.Core.Resources.Global.Global.Delete : @item.Mobile" data-message="@AN.Core.Resources.Global.Global.DoYouWantDeleteThisItem">
                                <i class="glyphicon glyphicon-trash"></i>@AN.Core.Resources.Global.Global.Delete
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="_ConfirmDeleteModalPartial" />
