@model List<AN.Web.Areas.Admin.Models.BrowserVisitsTableViewModel>

@if (Model.Any())
{
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <span>
                    <span class="imgleft fa fa-table" aria-hidden="true"></span>
                    @AN.Core.Resources.Global.Global.Browsers
                </span>
            </div>
            <div class="box-content">
                <div class="table-responsive" style="color:black;">
                    <table class="table m-0">
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    var CurrentNum = (double)item.BrowserViewCount * 100 / item.TottalVisits;
                                    var RoundUpPercentage = Math.Ceiling(CurrentNum);
                                    <tr>
                                        <td>
                                            <i class="fa fa-@item.BrowserName.ToLower() " style="color: red" aria-hidden="true"></i>
                                        </td>
                                        <td>@item.BrowserName</td>
                                        <td>@item.BrowserViewCount</td>
                                        <td>
                                            <div class="progress-bar progress-bar-striped active" role="progressbar"
                                                 aria-valuenow="@item.BrowserViewCount" aria-valuemin="0" aria-valuemax="100" style="min-width: 20px; width: @RoundUpPercentage%">
                                                @RoundUpPercentage%
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

