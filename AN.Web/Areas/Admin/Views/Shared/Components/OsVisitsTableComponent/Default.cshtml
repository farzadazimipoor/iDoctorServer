@model List<AN.Web.Areas.Admin.Models.OsVisitsTableViewModel>

@if (Model.Any())
{
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <span>
                    <span class="imgleft fa fa-table" aria-hidden="true"></span>
                    @AN.Core.Resources.Global.Global.OperatingSystems
                </span>
            </div>
            <div class="box-content">
                <div class="table-responsive" style="color:black;">
                    <table class="table m-0">
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    var CurrentNum = (double)item.OsViewCount * 100 / item.TottalVisits;
                                    var RoundUpPercentage = Math.Ceiling(CurrentNum);

                                    <tr>
                                        <td>
                                            <i class="fa fa-@item.OsName.ToLower()" style="color: green" aria-hidden="true"></i>
                                        </td>
                                        <td>@item.OsName</td>
                                        <td>@item.OsViewCount</td>
                                        <td>
                                            <div class="progress-bar progress-bar-striped active" role="progressbar"
                                                 aria-valuenow="@item.OsViewCount" aria-valuemin="0" aria-valuemax="100" style="min-width:20px;width: @RoundUpPercentage%">
                                                @RoundUpPercentage%
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}


