@model AppointmentStatus

@if (Model == AppointmentStatus.Pending)
{
    <i class="fa fa-clock fa-lg fa-2x mt-2" style="color:#17a2b8;" aria-hidden="true"></i>
}
else if (Model == AppointmentStatus.Done)
{
    <i class="fa fa-check-double fa-lg fa-2x mt-2" style="color:green;" aria-hidden="true"></i>
}
else if (Model == AppointmentStatus.Canceled)
{
    <i class="fa fa-ban fa-lg fa-2x mt-2" style="color:red;" aria-hidden="true"></i>
}
else
{
    <i class="fa fa-ban fa-lg fa-2x mt-2" style="color:red;" aria-hidden="true"></i>
}
