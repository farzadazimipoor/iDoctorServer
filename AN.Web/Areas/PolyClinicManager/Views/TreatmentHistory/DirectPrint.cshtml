
@model AN.Core.Models.PrintPrescriptModel

@{
    Layout = null;
    var expertise = "";
    var doctorName = $"{Model.DoctorName} {expertise}";
}

<DOCTYPE html>
    <html>
    <head>
        <title>@AN.Web.LocalResource.Resource.AwroNore</title>
        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/bootstrap-rtl/bootstrap-rtl.min.css" rel="stylesheet" />
        <link href="~/css/bootstrap4utilities/bootstrap-4-utilities.min.css" rel="stylesheet" />
        <link href="~/css/website/common/KurdishSite.css" rel="stylesheet" />
    </head>
    <body onload="window.print()">
        <div class="row m-3">
            <div class="col-xs-12">
                <div class="row" style="border:1px gray solid; border-radius:4px;">
                    <div class="col-xs-2 mt-1">
                        <img src="@("/Print/QrGenerator?data=" + Model.PatientName)" style="width:100px; height:100px;" />
                    </div>
                    <div class="col-xs-8 mt-1">
                        <h4 style="margin-top:5px;margin-bottom:3px;">@AN.Core.Resources.Global.Global.Doctor @doctorName</h4>
                        <p class="mt-3"><strong>@Model.HealthCenterName</strong></p>
                        <p class="mt-3">@Model.HealthCenterAddress</p>
                        <p>@Model.HealthCenterPhone</p>
                    </div>
                </div>
                <div class="row mt-3" style="border:1px gray solid; border-radius:4px;">
                    <div class="row mt-3">
                        <div class="col-xs-8 mt-2">
                            <h4 class="mr-4">@Model.PatientName</h4>
                        </div>
                        <div class="col-xs-4 mt-2">
                            <h5 style="float:left;"> @AN.Core.Resources.Global.Global.VisitDate: @Model.VisitDate</h5>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </body>
</html>


