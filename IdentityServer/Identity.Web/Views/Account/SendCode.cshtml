
@model Identity.Web.Models.AccountViewModels.SendCodeViewModel

@{
    ViewData["Title"] = "SEND_VERIFICATION_CODE";
    Layout = "~/Views/Shared/_NewLoginLayout.cshtml";
}

<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
    <form asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" method="post" class="login100-form validate-form">
        <input asp-for="RememberMe" type="hidden" />
        <span class="login100-form-title p-b-55">
            Two Factor Auth
        </span>

        <label>Send Code For: </label>
        <div class="wrap-input100 validate-input m-b-16" data-validate="Username Is Required">
            <select asp-for="SelectedProvider" asp-items="Model.Providers" class="input100"></select>
            <span class="focus-input100"></span>
            <span class="symbol-input100">
                <span class="fa fa-exchange-alt"></span>
            </span>
        </div>

        <div class="container-login100-form-btn p-t-25">
            <button class="login100-form-btn" type="submit">Send Code</button>
        </div>       
    </form>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }